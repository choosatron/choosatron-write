{
	"manifest_version": 2,
	"name": "ChoiceWright",
	"description": "Interactive fiction writing platform originally designed for use with the Choosatron Deluxe Adventure Matrix hardware device. Find out more at http://choosatron.com",
	"version": "0.1",
	"app": {
		"background": {
			"scripts": [
				"background.min.js"
			]
		}
	},
	"icons": { "16": "img/icon_16.png", "48": "img/icon_48.png", "128": "img/icon_128.png" },
	"offline_enabled": true,
	"permissions": [
		"clipboardRead",
		"clipboardWrite",
		"fileBrowserHandler",
		"geolocation",
		"identity",
		"storage",
		"syncFileSystem",
		"unlimitedStorage",
		"usb"
	],
	"optional_permissions": [
		{
			"fileSystem": ["write", "retainEntries", "directory"]
		},
		{
			"usbDevices": [
				{ "vendorId": 7504, "productId": 24701 }, // VID: 0x1D50, PID: 0x607D (Spark w/ WiFi - Serial Mode)
				{ "vendorId": 7504, "productId": 24703 } // VID: 0x1D50, PID: 0x607F (Spark w/ WiFi - CORE DFU)
			]
		}
	]
}
